<BigButton@Button>:
	font_size: self.size[0]/7
	#background_color:  28,28,28,1
	#color: 131,148,150,1

<GoMain@Button>:
	font_size: self.size[0]/5
	text: "<- Main"
	on_press: 
		app.root.transition.direction = 'right'
		app.root.current = 'main'

<GoBack@Button>:
	font_size: self.size[0]/5
	text: "<- 1"
	on_press: 
		app.root.transition.direction = 'right'
		app.root.current = app.root.last()

<GridLayout>:
	padding: 15,15
	spacing: 15,15

<MainMenuScreen>:
	GridLayout:
		padding: 15,15
		spacing: 15,15
		cols: 2
		BigButton:
			text: "Tagging"
			on_press: 
				root.manager.transition.direction = 'left'
				root.manager.current = 'tagging'

		BigButton:
			text: "Self-test"
			on_press: 
				root.manager.transition.direction = 'left'
				root.manager.current = 'selftest'

		BigButton:
			text: "Configure"
			on_press: 
				root.manager.transition.direction = 'left'
				root.manager.current = 'configure'

		BigButton:
			text: "Settings"
			on_press: 
				root.manager.transition.direction = 'left'
				root.manager.current = 'settings'

<LesserMenuScreen>:
	GridLayout:
		cols: 4
		GoMain: 

<VeryLessMenuScreen>:
	GridLayout:
		cols: 4
		GoMain: 
		GoBack:

<TaggingScreen>:
	name: "tagging"
	GridLayout:
		cols: 4
		GoMain: 
		Button:
			text: "Tag!"
			color: 255,44,75,1


<APRSTagControlRoot>:
	MainMenuScreen:
		name: "main"
	TaggingScreen:
	LesserMenuScreen:
		name: "selftest"
	LesserMenuScreen:
		name: "configure"
	LesserMenuScreen:
		name: "settings"


